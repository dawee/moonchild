#!/usr/bin/env node

const program = require('commander');

program
  .usage('<LUA FILE>')
  .parse(process.argv);

const build = require('../lib/build');
const fs = require('fs');

const filename = program.args[0];


if (!filename) {
  console.log('usage: moonchild <LUA FILE>');
  process.exit(1);
}


if (!fs.existsSync(filename)) {
  console.error(`"${filename}"" does not exist`);
  process.exit(1);  
}


build(filename);